<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.kzmpekos.products.Product" table="product" schema="product">
        <id name="productId">
            <column name="product_id" sql-type="int"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="farmerId">
            <column name="farmer_id" sql-type="int"/>
        </property>
        <property name="quantity">
            <column name="quantity" sql-type="int"/>
        </property>
        <property name="pricePerUnit">
            <column name="price_per_unit" sql-type="float" precision="-1"/>
        </property>
    </class>
</hibernate-mapping>