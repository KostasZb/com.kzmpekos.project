<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.kzmpekos.users.User" table="user" schema="user">
        <id name="userId">
            <column name="product_id" sql-type="int"/>
            <generator class="native"/>
        </id>
        <property name="addressId">
            <column name="address_id" sql-type="int"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="isFarmer">
            <column name="isFarmer" sql-type="boolean"/>
        </property>
    </class>
</hibernate-mapping>